{
  "ts-node": {
    "compilerOptions": {
      "module": "UMD"
    }
  },
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
